{
  "compilerOptions": {
    "outDir": ".",
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es6",
      "es7",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "rootDir": "",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "coverage",
    "node_modules"
  ]
}
